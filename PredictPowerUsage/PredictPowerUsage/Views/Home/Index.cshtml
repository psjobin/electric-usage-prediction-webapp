@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    @using (Html.BeginForm("Index","Home",FormMethod.Post))
    {
        <table>
           <tr>
               <td><label for="password">Password</label></td>
               <td>
                
                   @Html.TextBox("password")
               </td>
           </tr>
        <tr>
            <td><label for="myDate">Date</label></td>
            <td>
                
                @Html.TextBox("myDate",null,  new { @class = "form-control datepicker", placeholder = "Enter date here..." })
            </td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Get Prediction" /></td>
        </tr>
    </table>
    }

    <label id="lblErr" style="color:red;">@ViewData["lblErr"]</label>
    <label id="lblPrediction">@ViewData["lblPrediction"]</label>



</div>

@section Scripts {

<script>
    $(function () { // will trigger when the document is ready
       $('.datepicker').datepicker(); //Initialise any date pickers
    });
</script>

}